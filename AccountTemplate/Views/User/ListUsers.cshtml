@using AccountTemplate.Models
@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Registered Users";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        .card {
            margin: 0 auto;
            max-width: 80%;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        table {
            text-align: center;
            margin: 0 auto;
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            vertical-align: middle;
            padding: 12px;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .clearfix::after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>

<body>
    <h2 class="text-center mt-4">@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-header clearfix">
            <h3 class="card-title">User List</h3>
          @*   <a asp-action="CreateUser" class="btn btn-success create-button float-right">Create New User</a> *@
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</body>
</html>

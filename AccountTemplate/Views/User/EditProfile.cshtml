@model AccountTemplate.ViewModels.ProfileVM

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="BusinessName" class="control-label"></label>
                        <input asp-for="BusinessName" class="form-control" placeholder="Enter Business Name" />
                        <span asp-validation-for="BusinessName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Enter Phone Number" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrimaryEmail" class="control-label"></label>
                        <input asp-for="PrimaryEmail" class="form-control" placeholder="Enter Primary Email" />
                        <span asp-validation-for="PrimaryEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SecondaryEmail" class="control-label"></label>
                        <input asp-for="SecondaryEmail" class="form-control" placeholder="Enter Secondary Email" />
                        <span asp-validation-for="SecondaryEmail" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

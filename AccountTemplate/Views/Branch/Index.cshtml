@model IEnumerable<Branch>

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .card {
            margin: 0 auto;
            max-width: 80%;
        }

        table {
            text-align: center;
            margin: 0 auto;
        }

        th, td {
            vertical-align: middle;
        }

        .create-button {
            margin-bottom: 20px;
            float: right;
        }

        .clearfix::after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>

<body>

    <h2 class="text-center">Branches</h2>

    <div class="card">
        <div class="card-header clearfix">
            <a asp-action="Create" class="btn btn-success create-button">Create New Branch</a>
            <h3 class="card-title">Branch List</h3>
        </div>
        <div class="card-body">
            <table id="branchTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>WhatsApp</th>
                        <th>Email</th>
                        <th>Description</th>
                        <th>Actions</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var branch in Model)
                    {
                        <tr>
                            <td>@branch.BranchName</td>
                            <td>@branch.Address</td>
                            <td>@branch.Phone</td>
                            <td>@branch.WhatsApp</td>
                            <td>@branch.Email</td>
                            <td>@branch.Description</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@branch.Id" class="btn btn-primary btn-sm">Edit</a>
                                <form asp-action="Delete" asp-route-id="@branch.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this branch?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                            <td>
                                <a href="@branch.GoogleMapsLink" target="_blank" class="btn btn-info btn-sm">View on Map</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

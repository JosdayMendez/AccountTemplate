@model IEnumerable<AccountTemplate.ViewModels.SubscriptionVM>

@{
    ViewData["Title"] = "Buy Subscription";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-3">
        <div class="card card-primary">
            <div class="card-header text-center">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="BuySubscription" method="post">
                    <div class="form-group">
                        @foreach (var subscription in Model)
                        {
                            <h5>@subscription.Name</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <h5>Cost: @subscription.Cost credits</h5>
                                <button type="submit" name="subscriptionId" value="@subscription.Id" class="btn btn-primary">Buy</button>
                            </div>
                            <hr />
                        }
                    </div>
                </form>
                <div class="d-flex justify-content-between mt-2">
                    <a asp-controller="Credit" asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@using AccountTemplate.ViewModels
@model CreditVM

@{
    ViewData["Title"] = "Manage Credit";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-3">
        <div class="card card-primary">
            <div class="card-header text-center">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="ManageCredit" method="post" onsubmit="return validateForm()">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId" />

                    <div class="form-group">
                        <label asp-for="Balance">Current Balance</label>
                        <input asp-for="Balance" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="PurchaseAmount">Amount to Purchase</label>
                        <input asp-for="PurchaseAmount" class="form-control" />
                        <span asp-validation-for="PurchaseAmount" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-2">
                        <a asp-controller="Credit" asp-action="ListCredit" class="btn btn-secondary">Back</a>
                        <input type="submit" value="Buy Credit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validateForm() {
            const purchaseAmount = document.querySelector('input[name="PurchaseAmount"]').value;

            if (!purchaseAmount) {
                alert('Please enter an amount to purchase.');
                return false;
            }
            return true;
        }
    </script>
}

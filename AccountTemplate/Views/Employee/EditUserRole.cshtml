@model AccountTemplate.ViewModels.UserRolesVM

<!DOCTYPE html>
<html lang="en">

<head>

    <style>
        .card {
            margin: 0 auto;
            max-width: 80%;
        }

        table {
            text-align: center;
            margin: 0 auto;
        }

        th, td {
            vertical-align: middle;
        }

        .create-button {
            margin-bottom: 20px;
            float: right;
        }

        .clearfix::after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>

<body>

    <h2 class="text-center">Editar usuario</h2>

    <div class="card">
        <div class="card-header clearfix">
            <!-- Button aligned to the right -->
            <a asp-action="Index" class="btn btn-success create-button">Volver a la lista</a>
            <h3 class="card-title">Editar usuario</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name">Nombre</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Roles">Roles</label>
                    <select asp-for="Roles" class="form-control" multiple>
                        @foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role.Name">@role.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</body>
</html>
@using AccountTemplate.ViewModels
@model LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutAccount"; 
}

<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="/" class="h1"><b>Admin</b>LTE</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input asp-for="RememberMe" id="remember" type="checkbox" />
                            <label for="remember">
                                @Html.DisplayNameFor(a => a.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                </div>
            </form>

            <div class="social-auth-links text-center mt-2 mb-3">
                <a href="#" class="btn btn-block btn-primary" onclick="event.preventDefault(); document.getElementById('facebook-login-form').submit();">
                    <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                </a>
                <a href="#" class="btn btn-block btn-danger" onclick="event.preventDefault(); document.getElementById('google-login-form').submit();">
                    <i class="fab fa-google-plus mr-2"></i> Sign in using Google
                </a>
                <form id="facebook-login-form" asp-controller="Account" asp-action="ExternalLogin" method="post" style="display:none;">
                    <input type="hidden" name="provider" value="Facebook" />
                </form>
                <form id="google-login-form" asp-controller="Account" asp-action="ExternalLogin" method="post" style="display:none;">
                    <input type="hidden" name="provider" value="Google" />
                </form>
            </div>

            <p class="mb-1">
                <a href="@Url.Action("ForgotPassword", "Account")">I forgot my password</a>
            </p>
            <p class="mb-0">
                <a href="@Url.Action("Register", "Account")" class="text-center">Register a new membership</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
